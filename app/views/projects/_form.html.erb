
<%= form_for(@project, :html => { :class => 'form-horizontal form-model', multipart: true  }) do |f| %>
  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :title, :class => 'text-field form-control' %>
      <%#= f.file_field :slide %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :photos, :class => 'control-label' %>
    <div class="controls">
      <%= file_field_tag "slides[]", type: :file, multiple: true %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  projects_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
